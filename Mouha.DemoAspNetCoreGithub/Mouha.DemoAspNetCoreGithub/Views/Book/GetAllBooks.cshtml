@{
    ViewData["Title"] = "Tous les livres";
}

@model IEnumerable<BookModel>

<div class="container">
    <h3 class="display-4">Tous les livres</h3>
    <div class="row">

        @foreach (var livre in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                  <img src="@livre.CoverImageUrl" class="img-thumbnail"/>
                    <div class="card-body">
                        <h3 class="card-title">@livre.Title</h3>
                        <p class="card-text">@livre.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getbook" asp-route-id="@livre.Id"
                                   class="btn btn-sm btn-outline-secondary">Details</a>
                                
                            </div>
                            <small class="text-muted">@livre.Author</small>
                        </div>
                    </div>
                </div>
                @*<partial name="_bookThumbnail" model="new BookModel()" />*@
            </div>
        }


    </div>
</div>